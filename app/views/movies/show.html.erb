<div>
  <div>
    <h1>
      Movie #<%= @movie.id %> details
    </h1>

    <div>
      <div>
      <!--
        <a href="<%= movies_path %>">
          Go back
        </a> -->

        <%= link_to "Go back", movies_path %>
      </div>

      <div>
       <!-- <a href="/movies/<%#= @the_movie.id %>/edit"> 
        <a href="<%#= edit_movie_path(@the_movie.id) %>">
          Edit movie
        </a> -->
        <%= link_to "Edit movie", edit_movie_path(@movie.id) %>
      </div>

      <div>
        <!-- <a href="<%#= movie_path(@the_movie) %>" data-turbo-method="delete">
          Delete movie
        </a> -->

        <%= link_to "Delete Movie", @movie, data: { turbo_method: :delete } %>

        <%#= link_to "Delete movie", movie_path(@the_movie) %> 
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @movie.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @movie.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@movie.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@movie.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
