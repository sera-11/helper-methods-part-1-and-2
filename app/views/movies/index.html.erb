     <!-- <a href="<%#= movie_path(a_movie) %>"
        Show details
      </a> -->
    </td>
  </tr>
  <% end %>
</table>


<hr>


<form> 

  <label>First Name</label>
  <input name="full_name[first]" value="first name">

  <label>Middle Initial</label>
  <input name="full_name[middle]" value="middle initial">

  <label>Last Name</label>
  <input name="full_name[last]" value="last name">

  <button>Submit </button>
</form>


